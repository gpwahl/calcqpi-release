CC      = mpic++ 
LD      = mpic++ 
CPP     = $(CC)
install = install
account = $(word 2, $(subst /, ,$(HOME)))
instdir = /work/$(account)/$(account)/shared/bin
CCFLAGS = -fopenmp -O3 -D_mpi_version -DGSL_RANGE_CHECK_OFF -DGSL_C99_INLINE -DHAVE_INLINE
LDFLAGS = -lpthread -ldl -lgomp
LIBCBLAS	= -lgslcblas
LIBFFTW		= -lfftw3_omp -lfftw3
