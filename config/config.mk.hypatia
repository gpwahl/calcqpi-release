CC      = mpic++ 
LD      = mpic++ 
CPP     = $(CC)
install = install
instdir = $(HOME)/bin
CCFLAGS = -fopenmp -O3 -D_mpi_version -DGSL_RANGE_CHECK_OFF -DGSL_C99_INLINE -DHAVE_INLINE
LDFLAGS = -L/software/GCCLIBS/lib -lpthread -ldl -lgomp
INCLUDE = -I/software/GCCLIBS/include 
LIBCBLAS	= -lgslcblas
LIBFFTW		= -lfftw3_omp -lfftw3
